<?php
require_once("cfg.php");

function PokazKontakt()
{
    // Formularz kontaktowy – po wysłaniu wywoła tę samą stronę
    echo '
    <h2>Formularz kontaktowy</h2>

    <form method="post" action="">
        <label>Imię:</label><br>
        <input type="text" name="imie" required><br><br>

        <label>Email:</label><br>
        <input type="email" name="email" required><br><br>

        <label>Treść wiadomości:</label><br>
        <textarea name="wiadomosc" rows="7" cols="50" required></textarea><br><br>

        <input type="submit" name="wyslij" value="Wyślij wiadomość">
    </form>
    ';
}

function WyslijMailKontakt()
{
    if (!isset($_POST['wyslij'])) return;

    $imie = $_POST['imie'];
    $email = $_POST['email'];
    $wiadomosc = $_POST['wiadomosc'];

    $to = "twoj_email@domena.pl"; // ← wpisz tu docelowy adres
    $temat = "Wiadomość z formularza kontaktowego";
    $tresc = "Od: $imie <$email>\n\nTreść wiadomości:\n$wiadomosc";

    $naglowki = "From: $email\r\nReply-To: $email\r\n";

    if (mail($to, $temat, $tresc, $naglowki)) {
        echo "<div style='color:green;'>Wiadomość została wysłana!</div>";
    } else {
        echo "<div style='color:red;'>Błąd podczas wysyłania wiadomości.</div>";
    }
}

function PrzypomnijHaslo()
{
    global $login, $pass; // z cfg.php

    echo '
    <h2>Przypomnienie hasła administratora</h2>

    <form method="post" action="">
        Podaj e-mail administratora:<br>
        <input type="email" name="email_admin" required><br><br>

        <input type="submit" name="przypomnij" value="Przypomnij hasło">
    </form>
    ';

    // po wysłaniu formularza:
    if (isset($_POST['przypomnij'])) {

        $email = $_POST['email_admin'];

        $to = $email;
        $temat = "Przypomnienie hasła do panelu admina";
        $tresc = "Login: $login\nHasło: $pass\n\nUWAGA: nie przekazuj tego maila dalej!";
        $naglowki = "From: no-reply@twojastrona.pl\r\n";

        if (mail($to, $temat, $tresc, $naglowki)) {
            echo "<div style='color:green;'>Hasło zostało wysłane na podany email!</div>";
        } else {
            echo "<div style='color:red;'>Błąd podczas wysyłania maila!</div>";
        }
    }
}
?>